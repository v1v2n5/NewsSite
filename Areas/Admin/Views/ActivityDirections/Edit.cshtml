@model ActivityDirectionsViewModel
@{
    ViewData["Title"] = "Edit";
    string Action = (string)ViewBag.Action ?? "Create";
}

<h1>Edit</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="@Action" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreviewContent" class="control-label"></label>
                <textarea asp-for="PreviewContent" class="form-control"></textarea>
                <span asp-validation-for="PreviewContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreviewImage" class="control-label"></label>
                <input asp-for="PreviewImage" class="form-control" type="file"/>
                <span asp-validation-for="PreviewImage" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 clearfix">
                <input type="submit" value="@Action" class="btn btn-primary float-end" />
            </div>
            <script>
                CKEDITOR.replace('Content');
            </script>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

