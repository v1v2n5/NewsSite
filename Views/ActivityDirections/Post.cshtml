@model ActivityDirections
<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-post">
                                @if (!string.IsNullOrEmpty(Model.PreviewImage))
                                {
                                    <div class="blog-thumb">
                                        <img src="~/images/@Model.PreviewImage" alt="">
                                    </div>
                                }
                                <div class="down-content">
                                    <a asp-controller="ActivityDirections" asp-action="Post" asp-route-id="@Model.Id"><h4>@Model.Title</h4></a>
                                    <p>@Html.Raw(Model.Content)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("_MenuPartial")
        </div>
    </div>
</section>