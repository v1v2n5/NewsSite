    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var news in Model)
                        {
                            @await Component.InvokeAsync("NewsPreview", news)
                        }
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a asp-controller="News" asp-action="All">Все новости</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
